<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4CAF50"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageViewTop"
        android:layout_width="match_parent"
        android:layout_height="183dp"
        android:layout_marginTop="12dp"
        android:background="#4CAF50"
        android:src="@drawable/cricket"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewWickets"
        android:layout_width="277dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/fontdiner_swanky"
        android:gravity="center_horizontal"
        android:text="Score!"
        android:textColor="#E91E63"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewTop" />

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <TextView
            android:id="@+id/textViewWicketsTeamA"
            android:layout_width="109dp"
            android:layout_height="70dp"
            android:layout_marginStart="64dp"
            android:layout_marginLeft="64dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="10"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="540dp" />

        <TextView
            android:id="@+id/textViewWicketsTeamB"
            android:layout_width="109dp"
            android:layout_height="70dp"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="100dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="10"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="540dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/imageViewTop"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp">


        <EditText
            android:id="@+id/editTextTeam1Name"
            android:layout_width="198dp"
            android:layout_height="52dp"
            android:layout_marginTop="4dp"
            android:background="#3F51B5"
            android:clickable="false"
            android:ems="10"
            android:fontFamily="@font/fontdiner_swanky"
            android:hint="Enter Team Name"
            android:inputType="textPersonName"
            android:text="  Team A"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewTop" />

        <EditText
            android:id="@+id/editTextTeam2Name"
            android:layout_width="209dp"
            android:layout_height="51dp"
            android:layout_marginTop="4dp"
            android:background="#3F51B5"
            android:ems="10"
            android:fontFamily="@font/fontdiner_swanky"
            android:hint="Enter Team name"
            android:inputType="textPersonName"
            android:text="  Team B"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/editTextTeam1Name"
            app:layout_constraintTop_toBottomOf="@+id/imageViewTop" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
        tools:layout_editor_absoluteX="0dp">

        <ImageButton
            android:id="@+id/buttonWicketTeamA"
            android:layout_width="54dp"
            android:layout_height="49dp"
            android:layout_marginStart="76dp"
            android:layout_marginLeft="76dp"
            android:background="#635B5B"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@android:drawable/button_onoff_indicator_off"
            tools:layout_editor_absoluteY="637dp" />

        <TextView
            android:id="@+id/textViewWicket"
            android:layout_width="177dp"
            android:layout_height="52dp"
            android:layout_marginTop="0dp"
            android:background="#FFEB3B"
            android:fontFamily="@font/fontdiner_swanky"
            android:gravity="center_horizontal"
            android:text="Wickets"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_constraintTop_toTopOf="@+id/imageViewBottom"
            tools:layout_editor_absoluteX="129dp" />

        <ImageButton
            android:id="@+id/buttonWicketTeamB"
            android:layout_width="54dp"
            android:layout_height="49dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="304dp"
            android:background="#635B5B"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@android:drawable/button_onoff_indicator_off"
            tools:layout_editor_absoluteY="637dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        tools:layout_editor_absoluteX="0dp">

        <ImageButton
            android:id="@+id/imageButtonRunsPlusA"
            android:layout_width="55dp"
            android:layout_height="52dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="1dp"
            android:background="#656562"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@android:drawable/ic_input_add"
            tools:layout_editor_absoluteY="361dp" />

        <ImageButton
            android:id="@+id/imageButtonRunsMinusA"
            android:layout_width="55dp"
            android:layout_height="52dp"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="308dp"
            android:background="#656562"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@android:drawable/button_onoff_indicator_off"
            tools:layout_editor_absoluteY="361dp" />

        <TextView
            android:id="@+id/textViewRuns"
            android:layout_width="168dp"
            android:layout_height="52dp"
            android:background="#FFEB3B"
            android:fontFamily="@font/fontdiner_swanky"
            android:gravity="center_horizontal"
            android:text="Runs"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.576"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="361dp" />

        <ImageButton
            android:id="@+id/imageButtonRunsPlusB"
            android:layout_width="55dp"
            android:layout_height="51dp"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="80dp"
            android:background="#656562"
            app:layout_constraintStart_toStartOf="@+id/imageViewBottom"
            app:srcCompat="@android:drawable/ic_input_add"
            tools:layout_editor_absoluteY="362dp" />
        <ImageButton
            android:id="@+id/imageButtonRunsMinusB"
            android:layout_width="55dp"
            android:layout_height="51dp"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="80dp"
            android:background="#656562"
            app:layout_constraintStart_toStartOf="@+id/imageViewBottom"
            app:srcCompat="@android:drawable/button_onoff_indicator_off"
            tools:layout_editor_absoluteY="362dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
        tools:layout_editor_absoluteX="0dp">


        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="69dp"
                android:layout_height="64dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="0dp"
                android:background="#7D8C7D"
                android:text="1"
                android:textStyle="bold"
                app:buttonTint="#293132"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="439dp"
                />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="69dp"
                android:layout_height="64dp"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="96dp"
                android:background="#7D8C7D"
                android:text="2"
                android:textStyle="bold"
                app:buttonTint="#293132"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="439dp" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="69dp"
                android:layout_height="64dp"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="168dp"
                android:background="#7D8C7D"
                android:text="3"
                android:textStyle="bold"
                app:buttonTint="#293132"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="439dp" />

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="69dp"
                android:layout_height="64dp"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:background="#7D8C7D"
                android:text="4"
                android:textStyle="bold"
                app:buttonTint="#293132"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="439dp" />

            <RadioButton
                android:id="@+id/radioButton6"
                android:layout_width="69dp"
                android:layout_height="64dp"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:background="#7D8C7D"
                android:text="6"
                android:textStyle="bold"
                app:buttonTint="#293132"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="439dp" />
        </RadioGroup>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textViewRunsTeamA"
            android:layout_width="109dp"
            android:layout_height="70dp"
            android:layout_marginStart="52dp"
            android:layout_marginLeft="52dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="0"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="263dp" />

        <TextView
            android:id="@+id/textViewRunsTeamB"
            android:layout_width="109dp"
            android:layout_height="70dp"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="100dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="0"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="263dp" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonReset"
        android:layout_width="182dp"
        android:layout_height="37dp"
        android:background="#E8009688"
        android:gravity="center"
        android:text="START NEW GAME"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:backgroundTint="#28FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewTop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewWickets"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>